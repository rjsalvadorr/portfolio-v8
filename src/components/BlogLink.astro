---
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";

const { id, thumbnail, title, pubDate, category, description } = Astro.props;
---

<li class="blog-link">
    <a href={`/portfolio/${id}/`}>
        {thumbnail && <Image width={720} height={360} src={thumbnail} alt="" />}
        <h4 class="title">{title}</h4>
        <p class="post-info">
            <span class="category">{category}</span><br/>
            <span class="date">{<FormattedDate date={pubDate} />}</span>
            <hr/ class="post-info-line">
            <span class="description">{description}</span>
        </p>
    </a>
</li>
