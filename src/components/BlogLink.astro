---
import { CATEGORY_TEXT } from "../consts";
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";

const { id, thumbnail, title, pubDate, category, description } = Astro.props;

const ctgMap = CATEGORY_TEXT;
---

<li class="blog-link">
    <a href={`/portfolio/${id}/`} class="post-link">
        {thumbnail && <Image width={720} height={360} src={thumbnail} alt="" />}
        <h4 class="title">{title}</h4>
    </a>
    <p class="post-info">
        <span class="category">{ctgMap[category]}</span><br />
        <span class="date">{(<FormattedDate date={pubDate} />)}</span>
        <hr class="post-info-line" />
        <span class="description">{description}</span>
    </p>
</li>
